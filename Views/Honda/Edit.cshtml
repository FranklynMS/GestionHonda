@model GestionHonda.Models.HondaModel

<h2 class="text-center mt-4">Editar Modelo Honda</h2>

<div class="container mt-4">
    <form asp-action="Edit" method="post" class="p-4 border rounded shadow-sm bg-light">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label for="Name" class="form-label">Nombre del Modelo</label>
            <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="Ingrese el nombre del modelo" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label for="Year" class="form-label">Año</label>
            <input type="number" asp-for="Year" class="form-control" id="Year" placeholder="Ingrese el año" />
            <span class="text-danger" asp-validation-for="Year"></span>
        </div>
        <div class="mb-3">
            <label for="Price" class="form-label">Precio</label>
            <input type="number" asp-for="Price" class="form-control" id="Price" placeholder="Ingrese el precio" />
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="text-end">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a href="/Honda" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
