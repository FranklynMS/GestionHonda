@model GestionHonda.Models.HondaModel

<h2 class="text-center">Crear Modelo Honda</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="container mt-4">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Nombre</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="form-label">Año de Producción</label>
        <input asp-for="Year" class="form-control" type="number" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="form-label">Precio</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="image" class="form-label">Imagen del Modelo</label>
        <input type="file" id="image" name="image" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
